@model IEnumerable<Do_An_Web.Models.SanPham>
@using Do_An_Web.Models
@using System.Linq
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 style="color:hotpink;">Danh Mục Sản Phẩm</h2>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Creative - Bootstrap 3 Responsive Admin Template">
    <meta name="author" content="GeeksLabs">
    <meta name="keyword" content="Creative, Dashboard, Admin, Template, Theme, Bootstrap, Responsive, Retina, Minimal">
    <link rel="shortcut icon" href="img/favicon.png">
    <title>San Pham</title>
    <link href="~/Areas/Admin/Assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Areas/Admin/Assets/css/bootstrap-theme.css" rel="stylesheet">
    <link href="~/Areas/Admin/Assets/css/elegant-icons-style.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Assets/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Assets/css/style.css" rel="stylesheet">
    <link href="~/Areas/Admin/Assets/css/style-responsive.css" rel="stylesheet" />
</head>
<body>
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    <p>
                        @Html.ActionLink("Create New", "Create")
                        @using (Html.BeginForm())
                        {
                        <p>
                            @Html.TextBox("SearchString", (string)ViewBag.searchValue, new { style = " height:27px;" })
                            <input class="btn btn-success btn-sm" type="submit" value="Tìm kiếm" />
                        </p>
                    }
                        </p>

                    </header>

                    <table class="table table-striped table-advance table-hover">
                        <tbody>
                            <tr>
                                <th><i class="icon_profile"></i> Tên Sản Phẩm</th>
                                <th><i class="icon_mail_alt"></i> Giá </th>
                                <th><i class="icon_mobile"></i> Loại Sản Phẩm</th>
                                <th><i class="icon_image"></i> Hình Ảnh</th>
                                <th><i class="icon_key"></i> Update</th>


                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.TenSP</td>
                                    <td>@item.Gia</td>
                                    <td>@item.LoaiSanPham.TenLoai</td>
                                    <td>
                                        @Html.Image("../" + item.HinhAnh, "100", "90")
                                    </td>

                                    <td>
                                        <div class="btn-group">
                                            <a class="btn btn-primary" href="@Url.Action("Details", "SanPhams", new { id=item.MaSP })"><i class="icon_plus_alt2"></i></a>
                                            <a class="btn btn-success" href="@Url.Action("Edit", "SanPhams", new { id=item.MaSP })"><i class="icon_check_alt2"></i></a>
                                            <a class="btn btn-danger" href="@Url.Action("Delete", "SanPhams", new { id=item.MaSP })"><i class="icon_close_alt2"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </section>
            </div>
        </div>
        <script src="~/Areas/Admin/Assets/js/jquery.js"></script>
        <script src="~/Areas/Admin/Assets/js/bootstrap.min.js"></script>
        <script src="~/Areas/Admin/Assets/js/jquery.scrollTo.min.js"></script>
        <script src="~/Areas/Admin/Assets/js/jquery.nicescroll.js" type="text/javascript"></script>
        <script src="~/Areas/Admin/Assets/js/scripts.js"></script>
    </body>
</html>